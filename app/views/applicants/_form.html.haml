= form_for @applicant do |f|
  - if @applicant.errors.any?
    #error_explanation
      %h2= "#{pluralize(@applicant.errors.count, "error")} prohibited this applicant from being saved:"
      %ul
        - @applicant.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :surname
    = f.text_field :surname
  .field
    = f.label :patronymic
    = f.text_field :patronymic
  .field
    = f.label :status
    = select "applicant", 'status', options_for_select(Applicant.statuses)
  .field
    = f.label :salary
    = f.number_field :salary
  .actions
    = f.submit 'Save'

  = render 'shared/form_skill', f: f, ob: @applicant
